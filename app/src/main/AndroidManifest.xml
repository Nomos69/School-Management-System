<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolManagement"
        tools:targetApi="31">
        
        <!-- Splash Screen -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SchoolManagement.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".activities.auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".activities.auth.ForgotPasswordActivity"
            android:exported="false" />

        <!-- Main Dashboard -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <!-- User Management -->
        <activity
            android:name=".activities.users.UsersListActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.users.UserProfileActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.users.RegisterUserActivity"
            android:exported="false" />

        <!-- Student Management -->
        <activity
            android:name=".activities.students.StudentListActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.students.StudentProfileActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.students.AddStudentActivity"
            android:exported="false" />

        <!-- Teacher Management -->
        <activity
            android:name=".activities.teachers.TeacherListActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.teachers.TeacherProfileActivity"
            android:exported="false" />

        <!-- Class Management -->
        <activity
            android:name=".activities.classes.ClassListActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.classes.ClassDetailActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.classes.TimetableActivity"
            android:exported="false" />

        <!-- Attendance -->
        <activity
            android:name=".activities.attendance.AttendanceActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.attendance.AttendanceReportActivity"
            android:exported="false" />

        <!-- Examination -->
        <activity
            android:name=".activities.examination.ExamListActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.examination.GradebookActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.examination.ReportCardActivity"
            android:exported="false" />

        <!-- Fee Management -->
        <activity
            android:name=".activities.fees.FeeManagementActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.fees.PaymentHistoryActivity"
            android:exported="false" />

        <!-- Library -->
        <activity
            android:name=".activities.library.LibraryActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.library.BookIssueActivity"
            android:exported="false" />

        <!-- Parent Portal -->
        <activity
            android:name=".activities.parent.ParentDashboardActivity"
            android:exported="false" />

        <!-- Communication -->
        <activity
            android:name=".activities.communication.MessagingActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.communication.AnnouncementsActivity"
            android:exported="false" />

        <!-- Events -->
        <activity
            android:name=".activities.events.EventsActivity"
            android:exported="false" />
        
        <activity
            android:name=".activities.events.CalendarActivity"
            android:exported="false" />

        <!-- System Administration -->
        <activity
            android:name=".activities.admin.SystemSettingsActivity"
            android:exported="false" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
